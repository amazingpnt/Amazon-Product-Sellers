{
  "manifest_version": 3,
  "name": "Product Info",
  "version": "1.0.0",
  "description": "Shows amazon product name, first seller and its rating",
  "permissions": ["activeTab"],
  "host_permissions": [
    "*://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*/dp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
